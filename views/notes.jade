extends layout

block content
  h1= title
  p Welcome to #{title}
  div(class="text-justify").d-flex.justify-content-start.flex-wrap.my-auto.mx-auto.ps-5#notescontainer
  
  //- Modal
  .modal.fade#staticBackdrop(data-bs-backdrop="static", data-bs-keyboard="false", tabindex="-1", aria-labelledby="staticBackdropLabel", aria-hidden="true")
    .modal-dialog.modal-dialog-centered
      .modal-content
        .modal-header
          h1.modal-title.fs-5#staticBackdropLabel Update Note
          button.btn-close(type="button", data-bs-dismiss="modal", aria-label="Close")
        .modal-body
          form(action="/notes/update", method="POST")
            input(type="hidden", name="id", id="id")
            .mb-3
              label(for="title" class="form-label") Title
              input(type="text", class="form-control", id="utitle", name="title")
            .mb-3
              label(for="description" class="form-label") Description
              textarea(class="form-control", id="udescription", name="description", rows="3")
            //- also provide select and options to change the tags
            .mb-3
              label(for="tags") Category
              select(class="form-select", id="ucategory", name="tags", aria-label="Default select example")
                option(value="default") Select Tags
                option(value="personal") Personal
                option(value="work") Work
                option(value="ideas") Ideas
                option(value="quotes") Quotes
                option(value="random") Random
                option(value="others") Others
        .modal-footer
          button.btn.btn-secondary(type="button", data-bs-dismiss="modal") Cancel
          button.btn.btn-primary(type="button" id='cupdatebtn') Update

  script(src="/javascripts/notes.js")
